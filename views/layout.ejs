<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>TinyLink</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
      body {
        background: linear-gradient(135deg, #e0e7ff, #f7f7ff);
      }
    </style>
  </head>

  <body class="min-h-screen flex flex-col">

    
    <header class="bg-white shadow sticky top-0 z-10">
      <div class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold text-blue-700">TinyLink</a>
        <nav class="space-x-4">
          <a href="/" class="text-gray-700 hover:text-blue-600">Dashboard</a>
          <a href="/healthz" class="text-gray-500 hover:text-gray-700">Health</a>
        </nav>
      </div>
    </header>

    
    <main class="flex flex-1 justify-center items-start py-10 px-4">
      <div class="w-full max-w-4xl">
        <%- body %>
      </div>
    </main>

 
    <footer class="text-center py-6 text-sm text-gray-600">
      Built with passion for assignment • © <%= new Date().getFullYear() %>
    </footer>

    <script src="/app.js"></script>
  </body>
</html>
