<div class="max-w-xl mx-auto bg-white p-8 rounded-3xl shadow-xl hover:shadow-2xl transition">
  <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">
    Stats for <span class="text-blue-600"><%= link.code %></span>
  </h1>

  <div class="space-y-2 text-gray-700 text-lg mb-8">
    <p><strong>Short URL:</strong> 
      <a class="text-blue-600 hover:underline" href="<%= baseUrl %>/<%= link.code %>">
        <%= baseUrl %>/<%= link.code %>
      </a>
    </p>

    <p><strong>Target URL:</strong> 
      <a class="text-blue-600 hover:underline" href="<%= link.url %>">
        <%= link.url %>
      </a>
    </p>

    <p><strong>Clicks:</strong> <%= link.clicks %></p>

    <p><strong>Created:</strong>
      <%= new Date(link.created_at).toLocaleString("en-IN", { timeZone: "Asia/Kolkata" }) %>
    </p>

    <p><strong>Last clicked:</strong>
      <%= link.last_clicked 
          ? new Date(link.last_clicked).toLocaleString("en-IN", { timeZone: "Asia/Kolkata" }) 
          : '-' 
      %>
    </p>
  </div>

  <div class="flex justify-center gap-4">
    <a href="/" class="px-6 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition font-medium">
      Back
    </a>

    <button id="deleteBtn" data-code="<%= link.code %>"
      class="px-6 py-3 bg-red-600 text-white rounded-xl hover:bg-red-700 transition font-medium">
      Delete
    </button>
  </div>
</div>
