<div class="space-y-10">

  <h1 class="text-center text-4xl font-bold text-gray-800 mb-4">
    URL Shortener Dashboard
  </h1>

  <section class="bg-white p-8 rounded-3xl shadow-xl hover:shadow-2xl transition transform hover:-translate-y-1 max-w-3xl mx-auto">
    <h2 class="text-2xl font-semibold mb-6 text-center text-blue-700">
      Create Short Link
    </h2>

    <form id="createForm" class="grid grid-cols-1 gap-5">
      <div>
        <label class="text-sm font-medium text-gray-700">Long URL</label>
        <input
          id="url"
          name="url"
          type="url"
          placeholder="https://example.com/very/long/url"
          class="mt-1 w-full border-gray-300 rounded-xl p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500"
          required
        />
      </div>

      <div>
        <label class="text-sm font-medium text-gray-700">Custom Code (optional)</label>
        <input
          id="code"
          name="code"
          type="text"
          placeholder="e.g. docs123"
          class="mt-1 w-full border-gray-300 rounded-xl p-3 shadow-sm focus:ring-blue-500 focus:border-blue-500"
        />
        <small class="text-xs text-gray-500">6–8 characters</small>
      </div>

      <div class="text-center">
        <button id="createBtn"
          class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-xl shadow hover:bg-blue-700 transition">
          Create Link
        </button>
        <span id="status" class="ml-3 text-sm text-gray-700"></span>
      </div>
    </form>
  </section>

  <section class="bg-white p-8 rounded-3xl shadow-xl hover:shadow-2xl transition max-w-4xl mx-auto">
    <h2 class="text-2xl text-center font-semibold text-blue-700 mb-6">Your Links</h2>

    <% if (links.length === 0) { %>
      <p class="text-center text-gray-500">No links yet — create one above.</p>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm text-gray-700">
          <thead class="text-gray-600 border-b bg-gray-50">
            <tr>
              <th class="py-3 px-3 text-left">Code</th>
              <th class="py-3 px-3 text-left">Target URL</th>
              <th class="py-3 px-3 text-center">Clicks</th>
              <th class="py-3 px-3 text-center">Last Clicked</th>
              <th class="py-3 px-3 text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% links.forEach(l => { %>
              <tr class="border-b hover:bg-gray-50 transition">
                <td class="py-3 px-3">
                  <a class="text-blue-600 font-medium hover:underline" href="/<%= l.code %>">
                    <%= l.code %>
                  </a>
                </td>

                <td class="py-3 px-3 truncate max-w-xs" title="<%= l.url %>"><%= l.url %></td>

                <td class="py-3 px-3 text-center"><%= l.clicks %></td>

                <td class="py-3 px-3 text-center">
                  <%= l.last_clicked ? new Date(l.last_clicked).toLocaleString("en-IN", { timeZone: "Asia/Kolkata" }) : '-' %>
                </td>

                <td class="py-3 px-3 text-center space-x-3">
                  <a class="text-indigo-600 hover:underline" href="/code/<%= l.code %>">Stats</a>
                  <button class="deleteBtn text-red-600 hover:underline" data-code="<%= l.code %>">Delete</button>
                  <button class="copyBtn text-gray-700 hover:underline" data-copy="<%= baseUrl %>/<%= l.code %>">Copy</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </section>

</div>
